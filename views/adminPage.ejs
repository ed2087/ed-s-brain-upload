        <div class="formWrap">

            <h2> create new question</h2>            

            <form action="/newQuestion" method="POST">

                <!-- add only one label and input asking for name and a submit  -->
                <div class="questions_answers_conainers" id="questionWrap">

                    <div class="inputWrap">
                        <label for="questions">Questions</label>
                        <input type="text" name="questions" class="questions">
                    </div>                   

                </div>

                <div class="questions_answers_conainers" id="alternstiveWrap">

                    <div class="inputWrap">
                        <label for="alternstive">Alternative Question</label>
                        <input type="text" name="alternative" class="alternstive">
                    </div>                   

                </div>

                <div class="questions_answers_conainers" id="answersWrap">

                    <div class="inputWrap">
                        <label for="answers">Answers</label>
                        <textarea name="answers" class="answers" cols="30" rows="5"></textarea>
                    </div>                    

                </div>                


                <!-- permissions -->
                <div class="inputWrap">
                    <label for="permissions">Permissions</label>
                    <select name="permissions" id="permissions">
                        <option value="">Choose Option</option>
                        <option value="brothers">Brothers</option>
                        <option value="kids">Kids</option>
                        <option value="wife">Wife</option>
                        <option value="family">Family</option>
                        <option value="all">All</option>
                    </select>
                </div>

                <div class="inputWrap">
                    <input class="submit_button" type="submit" value="Enter">
                </div>

            </form>

            
